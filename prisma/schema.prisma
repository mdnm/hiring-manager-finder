generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ExperienceLevel {
  Internship
  Associate
  EntryLevel
  MidSeniorLevel
  Director
  Executive
}

enum MatchResult {
  MatchFound
  MatchNotFound
  CompanyNotFound
}

model JobOffer {
  id                 Int              @id @default(autoincrement())
  title              String
  description        String?
  location           String?
  url                String           @unique
  timeSincePublished String?
  experienceLevel    ExperienceLevel?
  Company            Company          @relation(fields: [companyId], references: [id])
  companyId          Int
  Lead               Lead[]
}

model Company {
  id            Int             @id @default(autoincrement())
  name          String
  website       String?
  staffCount    Int             @default(0)
  offers        JobOffer[]
  HiringManager HiringManager[]

  @@unique([name, website])
}

model HiringManager {
  id          Int     @id @default(autoincrement())
  firstName   String
  lastName    String?
  jobTitle    String?
  email       String?
  emailStatus String?
  linkedInUrl String  @unique
  location    String
  company     Company @relation(fields: [companyId], references: [id])
  companyId   Int
  Lead        Lead[]
}

model Lead {
  id              Int            @id @default(autoincrement())
  matchResult     MatchResult
  jobOffer        JobOffer       @relation(fields: [jobOfferId], references: [id])
  jobOfferId      Int
  hiringManager   HiringManager? @relation(fields: [hiringManagerId], references: [id])
  hiringManagerId Int?
  createdAt       DateTime       @default(now())
}
