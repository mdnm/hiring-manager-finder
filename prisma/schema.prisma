// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model PotentialMatch {
  id                      String          @id @default(uuid()) @map("_id")
  actionName              String
  job                     Job
  company                 Company?
  potentialHiringManagers HiringManager[]
  foundMatch              Boolean
  apolloQueryUsed         String?
  reasonForNoMatch        String?
  createdAt               DateTime        @default(now())
}

type Job {
  title       String?
  description String?
  location    String?
}

type Company {
  name          String?
  domain        String?
  employeeCount Int?
}

type HiringManager {
  name        String?
  firstName   String?
  lastName    String?
  email       String?
  emailStatus String?
  linkedinUrl String?
  title       String?
  departments String[]
  location    String?
}
