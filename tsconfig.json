{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "node",
    "lib": ["ESNext", "DOM"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/*", "src/domain/JobOpportunity.ts"]
}
